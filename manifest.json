{
  "manifest_version": 2,
  "name": "Blinkr",
  "description": "This extension helps you in protecting your eye",
  "version": "1.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["alarms", "notifications", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
